{
	"manifest_version": 2,
	"name": "BBC Blocker",
	"description": "This extension halts users to ask if they want to proceed to BBC or close the tab so they can avoid getting distracted.",
	"version": "1.0",
	"icons": {
		"128": "img/icon.png"
	},
	"browser_action": {
		"default_icon": "img/icon.png"
	},
	"permissions": ["activeTab", "tabs", "http://www.bbc.com/*"],
	"background": {
		"scripts": ["iconButton.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["http://www.bbc.com/*"],
			"css": ["styles.css"],
			"js": ["main.js"],
			"run_at": "document_end"
		}
	]
}
